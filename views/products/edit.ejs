      <p class="mt-3">Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate, sequi reiciendis quod quam provident dolorem non adipisci ipsum dicta quasi veniam vitae, ratione obcaecati eos! </p>

      <form action="/products/<%= product._id %>?_method=PUT" method="POST">
      <h5>PRODUCT DETAILS</h5>
      <input type="text" name="name" id="name" placeholder="Product Name">
      <select name="category" id="category">
        <% for(let category of categories) {%>
          <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>><%= category %></option>
          <% } %>
      </select>
      <h5 class="mt-4">PRODUCT AMOUNT</h5>
      <input type="number" name="price" step="0.01" id="price" placeholder="Price">
      <select name="" id="">
        <option value="Php">PHP</option>
        <option value="Php">USD</option>
        <option value="Php">EUR</option>
      </select>
      <h5 class="mt-4">DESCRIPTION</h5>
      <textarea class="rounded-3 text-center" name="" id="" cols="65" rows="6"></textarea>
      <p>
        <button class="mt-4 bg-black" id="submit">Submit</button>
      </p>

    </form>
